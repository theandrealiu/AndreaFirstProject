import java.util.Scanner;

import static java.lang.System.*;

public class GuessingGame
{
	private int upperBound;
	private int wrong = 0;
	private int guess = 0;
	private int count = 0;

	public GuessingGame(int stop)
	{
		upperBound = stop;

	}

	public void playGame()
	{
		int num = (int)(Math.random() *upperBound) + 1;
		Scanner keyboard = new Scanner(System.in);
		System.out.println("Enter a number between 1 and " + upperBound);
		guess = keyboard.nextInt();
		if (guess == num){
			count = count+1;
		}
		else{
			while (guess != num){
		
			
			System.out.println("Enter a number between 1 and " + upperBound);
			guess = keyboard.nextInt();
			if (guess < 1){
				System.out.println("Number out of bounds!");
			}
			else{
				count = count+1;
			}
			}
		}
		wrong = ((count-1)/num)*100;




	}

	public String toString()
	{
		String output=("It took " + Integer.toString(count) + " guesses to guess " + Integer.toString(upperBound) + "\nYou guessed wrong " + Integer.toString(wrong) + " percent of the time.");
		return output;
	}
}