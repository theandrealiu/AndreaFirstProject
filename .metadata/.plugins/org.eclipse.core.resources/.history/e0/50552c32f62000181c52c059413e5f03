import java.util.ArrayList;


public class Digits {
	
	private ArrayList<Integer> digitList;
	private int number;
	
	public Digits(int num){
		number = num;
	}
	
	public ArrayList<Integer> Digits(int num){
		if (num != 0){
			while (num >0){
				int dig = num%10;
				digitList.add(0,dig);
				num = num/10;
			}
		}
		else{
			digitList.add(0,0);
		}
		return digitList;
	}
}

