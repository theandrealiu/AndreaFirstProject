import java.util.ArrayList;


public class Digits {
	
	private ArrayList<Integer> digitList;
	private int number;
	
	public Digits(int num){
		number = num;
	}
	
	public ArrayList<Integer> Digits(int num){
		if (number != 0){
			while (number >0){
				int dig = number%10;
				digitList.add(0,dig);
				number = number/10;
			}
		}
		else{
			digitList.add(0,0);
		}
		return digitList;
	}
}

