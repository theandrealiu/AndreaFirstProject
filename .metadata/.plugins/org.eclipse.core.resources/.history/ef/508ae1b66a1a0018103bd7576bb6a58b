import java.lang.System;
import java.lang.Math;
import java.util.Scanner;

public class Grades
{
	//instance variables
	double[] Grades = {};
	private int len;
	

	//constructor
public Grades(){
	
		
	}
	


public void setGrades(int length,double[] Input){
	Grades = Input;
	len = length;
	for (int i = 0; i < len;i++){
		System.out.println("grade " + i + ": "+ Grades[i]);
	}
}
	//set method



	private double getSum()
	{
		double sum=0.0;
		for (int i = 0; i<len;i++){
			sum = sum + Grades[i];
		}


		return sum;
	}

	public double getAverage()
	{
		double average=0.0;
		average = getSum()/len;


		return average;
	}
public String toString(){
	return Grades();
		
	
	return "average: " + getAverage();
}

	



}