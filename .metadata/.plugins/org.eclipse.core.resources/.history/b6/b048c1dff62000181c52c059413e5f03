import java.util.ArrayList;


public class Digits {
	
	private ArrayList<Integer> digitList;
	private int number;
	private String output = "";
	
	public Digits(int num){
		number = num;
	}
	
	public String Digits(int num){
		if (number != 0){
			while (number >0){
				int dig = number%10;
				digitList.add(0,dig);
				number = number/10;
			}
		}
		else{
			digitList.add(0,0);
		}
		for (int i = 0; i <digitList.size(); i++){
			output = output + digitList.get(i) + " ";
		}
		return output;
	}
}

