
/**
 * This is a class that tests the Deck class.
 */
public class DeckTester {

	/**
	 * The main method in this class checks the Deck operations for consistency.
	 *	@param args is not used.
	 */
	public static void main(String[] args) {
		/* *** TO BE IMPLEMENTED IN ACTIVITY 2 *** */
		String[] Suits1 = {"spades", "diamonds"};
		String[] Ranks1 = {"queen", "seven"};
		int[] Points1 = {12,7};
		Deck deck = new Deck(Ranks1,Suits1,Points1);
		
		deck.isEmpty();
		deck.size();
		deck.deal();
		System.out.println(deck);
		
		String[] Suits2 = {"spades", "hearts"};
		String[] Ranks2 = {"jack", "seven"};
		int[] Points2 = {11,7};
		Deck deck2 = new Deck(Ranks2,Suits2,Points2);
		
		deck2.isEmpty();
		deck2.size();
		deck2.deal();
		System.out.println(deck2);
		
		String[] Suits3 = {"clubs", "hearts"};
		String[] Ranks3 = {"jack", "ace"};
		int[] Points3 = {11,1};
		Deck deck3 = new Deck(Ranks3,Suits3,Points3);
		
		deck3.isEmpty();
		deck3.size();
		deck3.deal();
		System.out.println(deck3);
		
	}
}
